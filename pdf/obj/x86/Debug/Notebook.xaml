<Page
    x:Class="pdf.Notebook"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pdf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  
    mc:Ignorable="d">

    <Grid Background="Transparent">
        <StackPanel x:ConnectionId='1' x:Name="StatusPanel" Orientation="Vertical" >
        <TextBlock x:ConnectionId='2' x:Name="StatusLabel" Margin="41,40,-1.20,10" TextWrapping="Wrap" Text="生词本:" FontSize="30"  >
                <TextBlock.Foreground>
                    <ImageBrush Stretch="UniformToFill"  ImageSource="ms-appx:///Assets/001.png" />
                </TextBlock.Foreground>
            </TextBlock>

            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <StackPanel x:ConnectionId='3' x:Name="showNotebook"  Orientation="Vertical">
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>

